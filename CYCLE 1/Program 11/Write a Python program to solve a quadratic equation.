import math
import cmath
a=float(input("Enter coefficient of a\n"))
b=float(input("Enter coefficient of b\n"))
c=float(input("Enter coefficient of c\n"))
D=(b**2-4*a*c)
if(D>0):
        root1=(-b+math.sqrt(D))/2*a
        root2=(-b-math.sqrt(D))/2*a
        print(f"The roots are real and distinct:{root1},{root2}")

elif(D==0):
        root=-b/2*a
        
print(f"The roots are equal and same:{root}")
else:
        root1=(-b+cmath.sqrt(D))/2*a 
        root2=(-b-cmath.sqrt(D))/2*a
        print(f"There is no real root:{root1},{root2}")

